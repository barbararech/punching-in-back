// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id               Int     @id @default(autoincrement())
  email            String  @unique
  password         String

  aplicattions     Applications[]
  attachments      Attachments[]
  steps            Steps[]


  @@map("users")
}

model Applications {
  id               Int      @id @default(autoincrement())
  companyName      String  
  roleName         String
  heardBack        Boolean   @default(false)
  jobDescription   String?   
  priority         String    
  observations     String?   
  itsArchived      Boolean   @default(false)
  user             Users     @relation(fields:[userId], references: [id])
  userId           Int

  @@map("applications")
}


model Attachments {
  id          Int      @id @default(autoincrement())
  name        String  
  link        String
  type        String   @default("resume")
  user        Users    @relation(fields:[userId], references: [id])
  userId      Int

  @@map("attachments")
}

model Steps {
  id            Int       @id @default(autoincrement())
  name          String  
  deadline      DateTime
  itsFinished   Boolean   @default(false)
  user          Users     @relation(fields:[userId], references: [id])
  userId        Int

  @@map("steps")
}