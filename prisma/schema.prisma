// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id               Int     @id @default(autoincrement())
  email            String  @unique
  password         String
  username         String

  applications     Applications[]

  @@map("users")
}

model Applications {
  id               Int                  @id @default(autoincrement())
  companyName      String  
  roleName         String
  heardBack        Boolean              @default(false)
  priority         ApplicationType    
  jobDescription   String?   
  observations     String?   
  itsArchived      Boolean               @default(false)
  user             Users                 @relation(fields:[userId], references: [id])
  userId           Int

  attachments      Attachments[]
  steps            Steps[]

  @@map("applications")
}

enum ApplicationType {
  high
  low
  medium
}

model Attachments {
  id                  Int              @id @default(autoincrement())
  name                String         
  link                String       
  type                AttachmentsType  @default(resume)
  applications        Applications     @relation(fields:[applicationId], references: [id])
  applicationId       Int

  @@map("attachments")
}

enum AttachmentsType {
  resume
  coverLetter
  portifolio
  testAnswers
  others
}

model Steps {
  id                  Int             @id @default(autoincrement())
  name                String        
  deadline            String      
  itsFinished         Boolean         @default(false)
  applications        Applications    @relation(fields:[applicationId], references: [id])
  applicationId      Int

  @@map("steps")
}